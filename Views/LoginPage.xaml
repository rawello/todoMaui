<?xml version="1.0" encoding="utf-8"?>

<ContentPage
x:Class="MauiApp2.Views.LoginPage"
xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
Title="{Binding Name}">
    <StackLayout Padding="20">
        <Entry x:Name="loginEntry" Placeholder="Login" Margin="0,0,0,10" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" Margin="0,0,0,10" />
        <Button x:Name="loginButton" Text="Login" Clicked="LoginBtn" Margin="0,0,0,10" />
        <Button x:Name="registerButton" Text="Register" />
    </StackLayout>
</ContentPage>